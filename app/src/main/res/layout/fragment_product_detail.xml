<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">


    <ImageView
        android:id="@+id/ivProductDetailImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/product_detail_image_min_height"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tvProductDetailPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/super_large_text"
        android:textColor="@color/priceColor"
        android:text="490$"
        android:layout_below="@+id/ivProductDetailImage"/>

    <Button
        android:id="@+id/btnTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track"
        android:layout_below="@+id/ivProductDetailImage"
        android:layout_alignEnd="@id/ivProductDetailImage"
        android:layout_alignRight="@id/ivProductDetailImage" />


</RelativeLayout>